<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcircle"
    tools:context=".GuestProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/status_guestact_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/titillium_web_semibold"
            android:gravity="center"
            android:text="@string/title_activity_profile"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="70dp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/profile_guestact_image"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    tools:srcCompat="@tools:sample/avatars[1]" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/nama_guestact_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/titillium_web_semibold"
                android:gravity="center"
                android:text="Erwin Yonata"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/story_guestact_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/viga"
                android:gravity="center"
                android:text="Hey I'm here at TugasKita"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tambah_guestact_button"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:background="@drawable/rounded_solid_green_border"
                    android:fontFamily="@font/viga"
                    android:text="+Tambah"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>